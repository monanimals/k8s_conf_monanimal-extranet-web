pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'develop', url: 'https://github.com/monanimals/monanimal-extranet.git'
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                // Exemple de commande kubectl, Ã  adapter selon ta config
                sh 'kubectl apply -k dev/'
            }
        }
    }
}